{
  "name": "vsdelphi",
  "displayName": "Pythia VSDelphi",
  "description": "VSCode IDE support for Delphi",
  "publisher": "pythia",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsdelphi.build",
        "title": "VSDelphi: Build"
      },
      {
        "command": "vsdelphi.run",
        "title": "VSDelphi: Run"
      },
      {
        "command": "vsdelphi.clean",
        "title": "VSDelphi: Clean"
      },
      {
        "command": "vsdelphi.debug",
        "title": "VSDelphi: Debug"
      },
      {
        "command": "vsdelphi.map2pdb",
        "title": "VSDelphi: map2pdb"
      }
    ],
    "configuration": {
      "title": "VSDelphi",
      "properties": {
        "vsdelphi.rsvarsPath": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Embarcadero\\Studio\\22.0\\bin\\rsvars.bat",
          "description": "Path to the Delphi build environment vars script."
        },
        "vsdelphi.embarcaderoInstallDir": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Embarcadero\\Studio\\22.0",
          "description": "Path to the Embarcadero installation"
        },
        "vsdelphi.embarcaderoRegistryPath": {
          "type": "string",
          "default": "HKEY_CURRENT_USER\\SOFTWARE\\Embarcadero\\BDS\\22.0",
          "description": "Path to the Embarcadero Windows Registry key"
        },
        "vsdelphi.mruDprojFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of most recently used Dproj files"
        }
      }
    },
    "keybindings": [
      {
        "key": "ctrl+f5",
        "command": "vsdelphi.run",
        "when": "editorTextFocus"
      },
      {
        "key": "shift+f5",
        "command": "vsdelphi.build",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "integrate": "vsce package -o vsdelphi.vsix && code --uninstall-extension pythia.vsdelphi; code --install-extension vsdelphi.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "postinstall": "patch-package && npm rebuild @vscode/windows-registry"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "node-loader": "^2.0.0",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/windows-registry": "^1.1.0",
    "glob": "^10.3.10",
    "icojs": "^0.17.1",
    "xml2js": "^0.6.2"
  }
}
